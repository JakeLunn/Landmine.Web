@model PagedList.IPagedList<Landmine.Domain.Entities.Score>

@{
    ViewBag.Title = "Leaderboard: Who's shootin for the bottom?";
    ViewBag.MetaDescription = "Compare youself to people across the globe! Because we all need to keep measure our self-worth against accomplishments of strangers.";
}

<h2>Leaderboard - Shooting for the bottom?</h2>
<small>Thats right, your self-worth is dependent on how you compare to strangers in another state.</small>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
<div class="pull-right">
    <a href="@Url.Action("Index")">Highest Scores</a> |
    <a href="@Url.Action("LowScore")">Lowest Scores</a>
</div>
<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <td>Nickname</td>
            <td>Level</td>
            <td>Score</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var score in Model)
        {
            <tr>
                <td>@score.Nickname</td>
                <td>@score.Level</td>
                <td>@score.Value</td>
            </tr>
        }
    </tbody>

</table>

@section scripts {
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}