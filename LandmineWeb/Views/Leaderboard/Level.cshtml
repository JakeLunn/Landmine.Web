@model PagedList.IPagedList<Landmine.Domain.Entities.Score>

@{
    ViewBag.Title = "Leaderboard by Level: How do you stack up?";
    ViewBag.MetaDescription = "Compare youself to people across the globe! Because we all need to keep measure our self-worth against accomplishments of strangers.";
}

<h2>Leaderboard - Level @ViewBag.CurrentLevel</h2>
<small>Thats right, your self-worth is dependent on how you compare to strangers in another state.</small>

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

@using (Html.BeginForm("Level", "Leaderboard", FormMethod.Get, new { @class = "form form-inline" }))
{
    //Level Filter
    <div class="form-group">
        <input type="text" placeholder="Filter by Level" class="form-control" name="level" />
        <input type="submit" value="Filter" class="btn btn-primary" />
        <a class="btn btn-primary" href="@Url.Action("Index")">Show All</a>
    </div>
}
<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <td>Nickname</td>
            <td>Level</td>
            <td>Score</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var score in Model)
        {
            <tr>
                <td>@score.Nickname</td>
                <td>@score.Level</td>
                <td>@score.Value</td>
            </tr>
        }
    </tbody>

</table>