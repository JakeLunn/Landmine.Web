@model PagedList.IPagedList<Landmine.Domain.Entities.Score>

@{
    ViewBag.Title = "Leaderboard: How do you stack up?";
    ViewBag.MetaDescription = "Compare youself to people across the globe! Because we all need to keep measure our self-worth against accomplisments of strangers.";
}

<h2>Leaderboard - How do you measure up?</h2>
<small>Thats right, your self-worth is dependent on how you compare to strangers in another state.</small>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <td>Nickname</td>
            <td>Level</td>
            <td>Score</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var score in Model)
        {
            <tr>
                <td>@score.Nickname</td>
                <td>@score.Level</td>
                <td>@score.Value</td>
            </tr>
        }
    </tbody>

</table>